[loggers]
keys=root,Main,SolarLog,Relais,Sensor

[handlers]
keys=consoleHandler,fileHandler

[formatters]
keys=simpleFormatter

[logger_root]
level=NOTSET
handlers=consoleHandler,fileHandler

[logger_Main]
level=DEBUG
handlers=consoleHandler,fileHandler

[logger_SolarLog]
level=DEBUG
handlers=consoleHandler,fileHandler

[logger_Relais]
level=DEBUG
handlers=consoleHandler,fileHandler

[logger_Sensor]
level=DEBUG
handlers=consoleHandler,fileHandler

[handler_consoleHandler]
class=StreamHandler
level=DEBUG
formatter=simpleFormatter
args=(sys.stdout,)

[handler_fileHandler]
class=handlers.RotatingFileHandler
args=('Log_Relais.txt','a','maxBytes=102400','backupCount=5')
formatter=simpleFormatter

[formatter_simpleFormatter]
format=%(asctime)s - %(name)s - %(levelname)s - %(message)s